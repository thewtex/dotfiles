[color]
	diff = auto
	branch = auto
	interactive = auto
	status = auto
	ui = auto
[core]
	excludesfile = /home/matt/.gitignore_global
	whitespace = trailing-space,space-before-tab
	editor = vim
[user]
	name = Matt McCormick
	email = matt.mccormick@kitware.com
[merge]
	tool = vimdiff
[clean]
	requireFore = false
	requireForce = false
[diff]
	renamelimit = 10000
[svn]
	rmdir = true
[push]
	default = simple
[hooks]
	kwstyle = true
[apply]
	whitespace = fix
# git sed 's/old-method-name/new-method-name/ig'
[alias]
	sed = ! git grep -z --full-name -l '.' | xargs -0 sed -i -e
        ln = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %cn - %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
[help]
	autocorrect = 3
